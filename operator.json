{
  "name": "GMM",
  "description": "Clusters data points using a model-based method (Gaussian Mixture Model).",
  "tags": [
    "clustering",
    "machine learning"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/gmm_operator"
  ],
  "properties": [
    {
      "kind": "DoubleProperty",
      "name": "n_clusters",
      "defaultValue": 0,
      "description": "Number of clusters (0 = optimal number of clusters will be estimated)"
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Variables",
            "type": "",
            "description": "Variable identifiers",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "1..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Observations",
            "type": "",
            "description": "Observation identifiers",
            "ontologyMapping": "observation",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Data",
                "type": "numeric",
                "description": "Input data per cell",
                "ontologyMapping": "measurement",
                "crosstabMapping": "x",
                "cardinality": "1",
                "factors": []
              }
            ]
          }
        ]
      }
    ]
  }
}